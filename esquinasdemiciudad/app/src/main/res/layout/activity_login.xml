<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tec.utb.esquinasdemiciudad.login.login">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/login_layout">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa un Nombre"
            android:inputType="textPersonName"
            android:id="@+id/edittext_nombre" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elegir foto del perfil"
            android:id="@+id/textView"
            android:layout_below="@+id/edittext_nombre"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/imagen"
            android:focusable="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout"
           >

            <Button
                android:text="Galeria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/boton_galeria"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"/>

            <Button
                android:text="Tomar foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/boton_foto"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"/>

            <Button
                android:text="Iniciar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/boton_iniciar"
                android:layout_weight="1"
                android:theme="@style/MyButton"
                android:textColor="@android:color/background_light"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
